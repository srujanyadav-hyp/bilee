rules_version = '2';

service cloud.firestore {
  match /databases/bilee/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isMerchant(merchantId) {
      return isAuthenticated() && request.auth.uid == merchantId;
    }
    
    // ==================== MERCHANTS COLLECTION ====================
    match /merchants/{merchantId} {
      // Merchants can read/write their own document
      allow read, write: if isMerchant(merchantId);
      
      // Items subcollection
      match /items/{itemId} {
        // Only merchant can manage their items
        allow read, write: if isMerchant(merchantId);
      }
    }
    
    // ==================== SESSIONS COLLECTION ====================
    match /sessions/{sessionId} {
      // Allow merchant to create session
      allow create: if isAuthenticated() && 
                       request.resource.data.merchant_id == request.auth.uid;
      
      // Allow merchant to read/update their own session
      allow read, update: if isAuthenticated() && 
                             resource.data.merchant_id == request.auth.uid;
      
      // Allow customer to read session if they have the session ID
      // (In practice, customers would access via app with proper auth)
      allow read: if isAuthenticated();
      
      // Prevent deletion (sessions are archived, not deleted)
      allow delete: if false;
    }
    
    // ==================== RECEIPTS COLLECTION ====================
    match /receipts/{receiptId} {
      // Allow merchant to read receipts they created
      allow read: if isAuthenticated() && 
                     resource.data.merchant_id == request.auth.uid;
      
      // Allow customer to read receipt if they have the receipt ID
      // (Customer auth verification would be implemented in app)
      allow read: if isAuthenticated();
      
      // Only cloud functions can write receipts
      allow create, update: if false;
      
      // Prevent deletion
      allow delete: if false;
    }
    
    // ==================== DAILY AGGREGATES COLLECTION ====================
    match /daily_aggregates/{aggregateId} {
      // Extract merchant ID from document ID format: merchantId_YYYY-MM-DD
      function getMerchantIdFromAggregate() {
        return aggregateId.split('_')[0];
      }
      
      // Allow merchant to read their own aggregates
      allow read: if isAuthenticated() && 
                     getMerchantIdFromAggregate() == request.auth.uid;
      
      // Allow merchant to create/update their own aggregates
      allow create, update: if isAuthenticated() && 
                               getMerchantIdFromAggregate() == request.auth.uid &&
                               request.resource.data.merchant_id == request.auth.uid;
      
      // Prevent deletion (aggregates are permanent)
      allow delete: if false;
    }
    
    // ==================== USERS COLLECTION (if needed) ====================
    match /users/{userId} {
      // Users can read/write their own document
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
